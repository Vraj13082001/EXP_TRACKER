@model Mvc.Models.mvcTotalExpenseLimit
@{
    ViewBag.Title = "AddOrEdit";
}

<body>
    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">Total Expense Limit</div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.TotalExpenseId)
                    <div class="form-group">
                        <div class="control-label col-md-2"><b> @Html.LabelFor(model => model.TotalExpenseLimit1)</b></div>
                        <div class="col-md-10">
